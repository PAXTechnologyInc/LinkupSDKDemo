<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_pen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/black_ink_pen"
            android:contentDescription="DEMO" />

        <TextView
            android:id="@+id/tv_pen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Black Ink Pen    $1.75" /> <!-- Example description -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_paper"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/three_ring_paper"
            android:contentDescription="DEMO" />

        <TextView
            android:id="@+id/tx_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Black Ink Pen    $1.25" /> <!-- Example description -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_notebook"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/spiral_notebook"
            android:contentDescription="DEMO" />

        <TextView
            android:id="@+id/tv_notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Black Ink Pen    $3.00" /> <!-- Example description -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chocolate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_chocolate"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chocolate_bar"
            android:contentDescription="DEMO" />

        <TextView
            android:id="@+id/tv_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Black Ink Pen    $1.15" /> <!-- Example description -->
    </LinearLayout>

</LinearLayout>